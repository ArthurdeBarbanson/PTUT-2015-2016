{% extends '::base.html.twig' %}

{% block body %}
    <h1 class="text-center margB20">Details de l'annonce id : {{ annonceId }}</h1>

    <div class="container">
        <div id="description" class="col-sm-6 container">
            <div class="container">
                <h3>Description de l'entreprise</h3>
                <p>{{ offre.entreprise.description }}</p>
            </div>
            <div class="container">
                <h3>Description de l'offre</h3>
                <p>{{ offre.sujet }}</p>
            </div>
        </div>
        <div class="col-sm-6 container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Coordonnées</h3>
                </div>
                <div class="panel-body">
                    <address>
                        <strong>{{ offre.entreprise.raisonSocial }}</strong><br>
                        {{ offre.entreprise.adresse.adresse }}<br>
                        {{ offre.entreprise.adresse.commune }}, {{ offre.entreprise.adresse.codePostal }}<br>
                    </address>
                    <p><strong>Contact :</strong></p>
                    <dl class="dl-horizontal">
                        <dt>nom</dt>
                        <dd>{{ offre.entreprise.nom }}</dd>
                        <dt>Prenom</dt>
                        <dd>{{ offre.entreprise.prenom }}</dd>
                        <dt>mail</dt>
                        <dd>{{ offre.entreprise.mail }}</dd>
                        <dt>téléphone</dt>
                        <dd>{{ offre.entreprise.telephone }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_ETUDIANT') %}
        <button class="btn btn-lg btn-primary center-block" data-toggle="modal" data-target="#postulerOffre">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Postuler à cette offre
        </button>
        <!-- Modal -->
        <div id="postulerOffre" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center">Postuler</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <fieldset class="form-group">
                            <label for="nom">Nom</label>
                            <input type="text" value="moi" class="form-control" id="nom" placeholder="Nom">
                        </fieldset>

                        <fieldset class="form-group">
                            <label for="prenom">Prenom</label>
                            <input type="text" value="prenomLabel" class="form-control" id="nom" placeholder="Prenom">
                        </fieldset>
                        <fieldset class="form-group">
                            <label>CV</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="cv" id="utiliserCV" value="utiliserCV"
                                           disabled>
                                    Utiliser mon CV existant.
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="cv" id="importerCV" value="importerCV" checked>
                                    Importer mon CV
                                </label>
                            </div>
                            <fieldset class="form-group" hidden="importerCV">
                                <label for="exampleInputFile">File input</label>
                                <input type="file" class="form-control-file" id="exampleInputFile">
                                <small class="text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
                            </fieldset>
                        </fieldset>


                    </form>
                </div>
            </div>

        </div>
    {% endif %}
{% endblock %}