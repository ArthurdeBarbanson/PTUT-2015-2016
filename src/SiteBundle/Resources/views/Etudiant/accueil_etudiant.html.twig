{% extends '::base.html.twig' %}
{% form_theme form2 'bootstrap_3_layout.html.twig' %}
{% block title %}
    Accueil étudiant
{% endblock %}
{% block body %}
    <h1 class="text-center">Mon Compte</h1>
    <div class="row">
        <div id="actions" class="col-sm-12 container">
            <h2>Informations Personnelles : <a href="#"><span class="glyphicon glyphicon-pencil"
                                                              aria-hidden="true"></span></a></h2>
        </div>
    </div>
    <div class="row">
        <div id="actions" class="col-sm-6 container">
            <p>Nom : {{ etudiant.laPersone.nom }}</p>
        </div>
        <div id="actions" class="col-sm-6 container">
            <p>Prénom : {{ etudiant.laPersone.prenom }}</p>
        </div>
    </div>

    <div class="row">
        {% if etudiant.laPersone.sexe %}
            <div id="actions" class="col-sm-6 container">
                <p>Sexe : {{ etudiant.laPersone.sexe }}</p>
            </div>
        {% else %}
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Sexe : </p>
            </div>
        {% endif %}

        {% if etudiant.nationalite %}
            <div id="actions" class="col-sm-6 container">
                <p>Nationnalité : {{ etudiant.nationalite }}</p>
            </div>
        {% else %}
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Nationnalité : "A remplir</p>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div id="actions" class="col-sm-6 container">
            <p>Date de naissance : {{ etudiant.dateNaissance | date('d-m-Y') }}</p>
        </div>
        {% if etudiant.laPersone.Adresse %}
            <div id="actions" class="col-sm-6 container">
                <p>Ville de naissance : {{ etudiant.villeNaissance }}</p>
            </div>
        {% else %}
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Ville de naissance : </p>
            </div>
        {% endif %}
    </div>
    <div class="row">
        {% if etudiant.laPersone.mail %}
            <div id="actions" class="col-sm-6 container">
                <p>Mail : {{ etudiant.laPersone.mail }}</p>
            </div>
        {% else %}
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Mail : </p>
            </div>
        {% endif %}
        {% if etudiant.laPersone.telephone %}
            <div id="actions" class="col-sm-6 container">
                <p>Téléphone : {{ etudiant.laPersone.telephone }}</p>
            </div>
        {% else %}
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Téléphone : </p>
            </div>
        {% endif %}
    </div>

    {% if etudiant.laPersone.Adresse %}
        <div class="row">
            <div id="actions" class="col-sm-12 container">
                <p>Adresse : {{ etudiant.laPersone.Adresse.adresse }}</p>
            </div>
        </div>
        <div class="row">
            <div id="actions" class="col-sm-6 container">
                <p>Code Postal : {{ etudiant.laPersone.Adresse.codePostal }}</p>
            </div>
            <div id="actions" class="col-sm-6 container">
                <p>Ville : {{ etudiant.laPersone.Adresse.commune }}</p>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div id="actions" class="col-sm-12 container">
                <p class="alert-danger">Adresse : </p>
            </div>
        </div>
        <div class="row">
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Code Postal : </p>
            </div>
            <div id="actions" class="col-sm-6 container">
                <p class="alert-danger">Ville : </p>
            </div>
        </div>
    {% endif %}

    {% if etudiant.numeroDossierCandidature %}
        <div class="row">
            <div id="actions" class="col-sm-12 container">
                <p>Numéro dossier ciel2 : {{ etudiant.numeroDossierCandidature }}</p>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div id="actions" class="col-sm-12 container">
                <p class="alert-danger">Numéro dossier ciel2 : </p>
            </div>
        </div>
    {% endif %}

    {% if app.user.idEtudiant.cv %}
        <div class="row">
            <div id="actions" class="col-sm-12 container">
                <p>CV : <a href="{{ asset(app.user.idEtudiant.cv) }}" target="_blank">Cliquer ici</a></p>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div id="actions" class="col-sm-12 container">
                <p class="alert-danger">CV : </p>
            </div>
        </div>
    {% endif %}

    <hr>


    {% if not etudiant.laPersone.sexe %}
        <h3> Veuillez completer votre profil </h3>

        {% else %}

            <div class="row">
                <div id="actions" class="col-sm-12 container">
                    <h2>Avancement du dossier :</h2>
                </div>
            </div>
            {% if etudiant.laPersone.sexe %}
            <div class="row">
                <div id="actions" class="col-sm-12 container">
                    <h3>Etape 1 : Trouver une entreprise </h3>
                    <p> Vous devez trouver une entreprise. Pour celà vous pouvez consulter les annonces des entreprises sur notre site.
                        <a href="{{ path('site_listeOffreEtudiant') }}" class="btn btn-info"> Consulter Annonce</a>
                    </p>

                    <p>Vous pouvez également joindre un cv à votre profil :
                            <button class="btn btn-primary" data-toggle="modal" data-target="#ajouterCV">
                            Ajouter/Modifier mon CV
                            </button></p>
                </div>
            </div>
            <div class="row">
                <div id="actions" class="col-sm-12 container">
                    <h3>Etape 2 : Pré inscription contrat </h3>
                    <p> Vous devez remplir le fomulaire de cette adresse
                        <a href="http://www.fsarl-ufa.com/fdp/rl1-26-sil-option-concepteur-et-gestionnaire-de-site-internet-metinet?crew=15" class="btn btn-info" target="_blank">
                            Fiche de pré-inscription rentrée</a>
                    </p>

                    <p>Vous consulter la fiche de votre entreprise pour remplir le formulaire :
                        <button class="btn btn-info"  data-toggle="modal" data-target="#FicheEntreprise">
                            Fiche entreprise
                        </button></p>
                    <p> Une fois cette étape faite le responsable de formation validera celle-ci afin que vous puissiez passer à l'étape suivante.</p>
                </div>
            </div>
            <div class="row">
                <div id="actions" class="col-sm-12 container">
                    <h3>Etape 3 : Dossiers inscription pédagogique (Date limite 31 août 2016) </h3>
                    <p> Champs à remplire obligatoirement </p>
                    <div class="panel panel-info">
                        <div class="panel-body">




                        <div class="row">

                            <div class="col-lg-4">
                                <h4>Bac ou equivalent :</h4>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.Intitule , ' Intitulé : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                 {{ form_widget(formPreInscription.Intitule , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.Mention , ' Mention : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.Mention , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.Type , ' Type : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.Type , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.Departement , ' Département  : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.Departement , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.Nom , ' Nom  : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.Nom , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <h4>Dernier établissement fréquenté :</h4>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.NomDernier , ' Nom  : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.NomDernier , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.DepartementDernier , ' Département  : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.DepartementDernier , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.AnneDernier , ' Annee  : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.AnneDernier , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_label(formPreInscription.TypeDernier , ' Type  : ', {'label_attr': {'class': 'col-sm-5'}}) }}
                                            <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.TypeDernier , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-sm-5 control-label required"> Est Lyon  : </label>
                                             <div class="col-sm-7">
                                                {{ form_widget(formPreInscription.isLyon , {'attr': {'class': 'col-sm-12'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>
                            <div class="col-lg-4">
                                <div class="row">
                                    <div class="col-md-6">     </div>
                                    <div class="col-md-6">   </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="row">
                                    <div class="col-md-6">   </div>
                                    <div class="col-md-6">   </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    </div>

                    <p>Ce dossier d'inscription dûment compléter (pièce justificatif compris ) devra nous être retourné impérativement.
                    DES QUE POSSIBLE par voie postal uniquement à l'adresse suivante.</p>
                    <p style="text-align: center">
                        IUT LYON1 SITE DE LA DOUA <br>
                        SERVICE FARE <br>
                        1 rue de la Technologie <br>
                        69622 VILLEURBANNE CEDEX
                    </p>
                    <p> Verifier puis imprimer le dossier pré-remplie : <a href="#" target="_blank">Cliquez ici si vous avez rempli le tableau ci-dessus</a> </p>
                    <p> Vous devrez joindre en plus du dossier les pièces demandé dans ce document : <a href="#" target="_blank">Pièce supplémentaire</a> </p>
                </div>
            </div>
            <div class="row">
                <div id="actions" class="col-sm-12 container">
                    <h3> Etape 4 : Signature du contrat </h3>
                    <p> Après signature du contrat veuilllez donner un copie au secrétariat.</p>
                </div>
            </div>
            {% endif %}{% endif %}


    <!-- Modal -->
    <div id="ajouterCV" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    {% if app.user.idEtudiant is null or app.user.idEtudiant.cv is null or app.user.idEtudiant.cv is sameas("") %}
                        <h4 class="modal-title text-center">Ajouter un CV</h4>
                    {% else %}
                        <h4 class="modal-title text-center">Modifier mon CV</h4>
                    {% endif %}
                </div>
                <div class="modal-body">
                    {% if app.user.idEtudiant is null or app.user.idEtudiant.cv is null or app.user.idEtudiant.cv is sameas("") %}
                    {% else %}
                        <h5><strong>Vous possédez déjà un CV :</strong> <a href="{{ asset(app.user.idEtudiant.cv) }}"
                                                                           target="_blank">Voir mon CV</a></h5>
                    {% endif %}
                    {{ form(form2) }}
                    {% if error is not sameas('') %}
                        <p class="red">{{ error }}</p>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>

    <!-- Modal -->
    <div id="FicheEntreprise" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                   <h1>Fiche Entreprise</h1>
                </div>
                <div class="modal-body">
                    <h1>{{ entreprise.raisonSocial }}</h1>
                    <div class="row">
                        <div class="col-md-3"><strong>Raison sociale :</strong></div>
                        <div class="col-md-9">{{ entreprise.raisonSocial }}</div>
                        <div class="col-md-3"><strong>Description :</strong></div>
                        <div class="col-md-9">{{ entreprise.description }}</div>
                        <div class="col-md-3"><strong>Adresse :</strong></div>
                        <div class="col-md-9">{{ entreprise.adresse.adresse }}</div>
                        <div class="col-md-3"><strong>Code postal :</strong></div>
                        <div class="col-md-9">{{ entreprise.adresse.codePostal }}</div>
                        <div class="col-md-3"><strong>Ville :</strong></div>
                        <div class="col-md-9">{{ entreprise.adresse.commune }}</div>
                        <div class="col-md-3"><strong>Pays :</strong></div>
                        <div class="col-md-9">{{ entreprise.adresse.nomPays }}</div>
                        <div class="col-md-12"><h3>Contact</h3></div>
                        <div class="col-md-3"><strong>Nom :</strong></div>
                        <div class="col-md-9">{{ entreprise.nom }}</div>
                        <div class="col-md-3"><strong>Prenom :</strong></div>
                        <div class="col-md-9">{{ entreprise.prenom }}</div>
                        <div class="col-md-3"><strong>E-mail :</strong></div>
                        <div class="col-md-9">{{ entreprise.mail }}</div>
                        <div class="col-md-3"><strong>Téléphone :</strong></div>
                        <div class="col-md-9">{{ entreprise.telephone }}</div>
                        {% if entreprise.siteWeb is not null %}
                            <div class="col-md-3"><strong>Site web :</strong></div>
                            <div class="col-md-9"><a href="{{ entreprise.siteWeb }}" target="_blank">{{ entreprise.siteWeb }}</a></div>
                        {% endif %}

                    </div>
                    <div class="text-center">
                        <a class="btn btn-default" href="{{ path('site_accueilEtudiant') }}">Retour</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    {% block javascripts %}
        <script type="text/javascript">
            {% if error is not sameas('') %}
            jQuery(document).ready(function ($) {

                $('#ajouterCV').modal('show');

            });
            {% endif %}
        </script>
    {% endblock %}
{% endblock %}